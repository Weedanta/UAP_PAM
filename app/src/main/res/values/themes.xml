<!-- Path: app/src/main/res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_color</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_dark_color</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/background_light</item>
        <!-- Surface color -->
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <!-- Error color -->
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@android:color/white</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="Theme.ToDoList.NoActionBar" parent="Theme.ToDoList">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.ToDoList.Splash" parent="Theme.ToDoList.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Custom Button Styles -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="CustomButton.Primary" parent="CustomButton">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomButton.Secondary" parent="CustomButton">
        <item name="backgroundTint">@color/surface_color</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Text Input Layout Styles -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="hintTextColor">@color/primary_color</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Card View Styles -->
    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface_color</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="CustomBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="android:background">@drawable/bottom_nav_background</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Toolbar Style -->
    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@drawable/toolbar_gradient</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- FAB Style -->
    <style name="CustomFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="tint">@android:color/white</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>
</resources>